<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Food Items"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="30dp" />

        <CheckBox
            android:id="@+id/cb_food_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item 1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/cb_food_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item 2"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/cb_food_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item 3"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/cb_food_item_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item 4"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <CheckBox
            android:id="@+id/cb_food_item_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Item 5"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btn_submit_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange_dark"
            android:text="Submit Order"
            android:textColor="@android:color/white"
            android:layout_marginTop="30dp" />
    </LinearLayout>

</ScrollView>
