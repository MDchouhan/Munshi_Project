<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA500"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/studentUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student UI"
        android:textSize="23sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/studentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:22109093"
        android:layout_below="@id/studentUI"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/mealPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<Meal page<Close Meal>"
        android:layout_below="@id/studentID"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/selectDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:background="#D3D3D3"
        android:layout_below="@id/mealPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/breakfastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:background="#808080"
        android:layout_below="@id/selectDateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/lunchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:background="#808080"
        android:layout_below="@id/breakfastButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/snacksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snacks"
        android:background="#808080"
        android:layout_below="@id/lunchButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/dinnerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:background="#808080"
        android:layout_below="@id/snacksButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/closeAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close all"
        android:background="#808080"
        android:layout_below="@id/dinnerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

   </RelativeLayout>
